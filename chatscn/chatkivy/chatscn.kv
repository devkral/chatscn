#: import os os

<FriendTreeNode>:
    #rows: 1
    height: 30
    #border: (0, 0, 0, 0)

<ChatAvailTreeNode>:
    height: 30
    #textsize: self.width-10,self.height-10
    shorten_from: "left"
    allow_no_selection: False
    shorten: True


<ServerTreeNode>:
    height: 30

<ScrollGrid>:
    size_hint: 1, None
    cols: 1
    row_default_height: 30

<ScrollTree>:
    size_hint: 1, None
    hide_root: True

<DeleteDialog>:
    Label:
        pos_hint: {"x": 0, 'y': 0.08}
        size_hint: 1, 0.91
        text: ""
        id: deletemsg

    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 1, 0.07
        id: buttonlist

<ListDialog>:
    ScrollView:
        pos_hint: {"x": 0, 'y': 0.08}
        size_hint: 1, 0.91
        bar_pos_y: "right"
        bar_width: 10
        ScrollTree:
            on_selected_node: if len(root.buttons) > 0: root.call(root.buttons[0][1])
            id: viewlist
    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 1, 0.07
        id: buttonlist

<NameDialogAdd>:
    Label:
        text: "Add new entity:"
        pos_hint: {"x": 0, 'y': 0.7}
        size_hint: 1, 0.3
    TextInput:
        multiline: False
        id: newname
        pos_hint: {"x": 0, 'y': 0.35}
        size_hint: 1, 0.3
    Button:
        text: "Add"
        on_press: root.ok()
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 0.5, 0.3
    Button:
        text: "Cancel"
        on_press: root.cancel()
        pos_hint: {"x": 0.5, 'y': 0}
        size_hint: 0.5, 0.3


<FileDialog>:
    Label:
        id: namelabel
        pos_hint: {"x": 0, 'y': 0.95}
        size_hint: 0.4, 0.05
    TextInput:
        id: nameinput
        pos_hint: {"x": 0.4, 'y': 0.93}
        size_hint: 0.6, 0.07
        multiline: False
        padding: 1,0
    FileChooserListView:
        pos_hint: {"x": 0, 'y': 0.1}
        size_hint: 1, 0.82
        id: selectedfile
        path: os.getenv("HOME")
        on_submit: if len(root.buttons) > 0: root.call(root.buttons[0][1])
        on_selection: root.select(self.selection)
    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 1, 0.07
        id: buttonlist

<PwDialog>:
    Label:
        id: msglabel
        pos_hint: {"x": 0, 'y': 0.5}
        size_hint: 1, 0.5
    TextInput:
        id: pwfield
        password: True
        multiline: False
        pos_hint: {"x": 0, 'y': 0.3}
        size_hint: 1, 0.2
    Button:
        text: "Ok"
        pos_hint: {"x": 0, 'y': 0.0}
        size_hint: 0.5, 0.2
    Button:
        text: "Cancel"
        pos_hint: {"x": 0.5, 'y': 0.0}
        size_hint: 0.5, 0.2

MainWidget:
    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {"x": 0.01, 'y': 0.92}
        size_hint: 0.98, 0.06
        ToggleButton:
            text: 'Chats'
            on_press: screenman.current="chats"
            group: "chatsv"
            state: "down"
            allow_no_selection: False
            id: chatbutton

        ToggleButton:
            text: 'Server & Friends'
            on_press: screenman.current="server"
            group: "chatsv"
            allow_no_selection: False
            id: serverbutton

        FloatLayout:
            Label:
                pos_hint: {"x": 0, 'y': 0}
                size_hint: 1, 1
                font_size: 20
                #valign: "end"
                #bold: True
                text: "normal"
                disabled: True
                disabled_color: 0,1,0,1
                id: senslabel
            Slider:
                pos_hint: {"x": 0, 'y': 0}
                size_hint: 1, 1
                min: 0
                max: 2
                step: 1
                #value: 0
                on_value: root.set_sensitivelabel(self)
                #id: sensslider
                opacity: 0.4
        Button:
            text: 'Settings'
            #on_press

    ScreenManager:
        pos_hint: {"x": 0.01, 'y': 0.01}
        size_hint: 0.98, 0.91
        id: screenman
        Screen:
            name: 'chats'
            on_enter: app.async_load(root.load_avail_chats)
            FloatLayout:
                #Splitter:
                #
                #    horizontal: True
                #    sizable_from: "right"
                #    on_release: chatview.x = self.x+self.width
                ScrollView:
                    pos_hint: {"x": 0, 'y': 0}
                    size_hint: 0.3, 1
                    ScrollGrid:
                        id: chatfriends
                        size_hint: 1, None
                        #root_options: {"text": "Chats"}
                TextInput:
                    hint_text: "Conversation Hash"
                    pos_hint: {"x": 0.305, 'y': 0.01}
                    size_hint: 0.695, 0.075
                    #on_double_tap: pass
                    text: ""
                    #padding: self.width/3, self.height/3, 5, 5
                    on_text: root.set_namehash(self.text)
                    id: convershash
                    multiline: False
                FloatLayout:
                    pos_hint: {"x": 0.305, 'y': 0.1}
                    size_hint: 0.695, 0.9
                    id: chatview
                    ScrollView:
                        pos_hint: {"x": 0, 'y': 0.3}
                        size_hint: 1, 0.7
                        bar_pos_y: "right"
                        bar_width: 10
                        ScrollGrid:
                            id: chathist
                            spacing: 5
                            row_default_height: 30
                            #root_options: {"text": "Chat history"}
                    TextInput:
                        pos: 0, 0
                        id: chattext
                        pos_hint: {"x": 0, 'y': 0.07}
                        size_hint: 1, 0.2
                    BoxLayout:
                        orientation: 'horizontal'
                        pos: 0, 0
                        pos_hint: {"x": 0, 'y': 0}
                        size_hint: 1, 0.06
                        Button:
                            text: 'Send'
                            on_press: root.send_text()
                        Button:
                            text: 'Image'
                            on_press: root.send_image()
                        Button:
                            text: 'Files'
                            on_press: root.send_file()

        Screen:
            name: 'server'
            on_enter: app.async_load(root.load_friends)
            FloatLayout:
                Label:
                    text: "Server:"
                    pos: 0, 0
                    pos_hint: {"x": 0, 'y': 0.95}
                    size_hint: 0.1, 0.05
                BoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {"x": 0.1, 'y': 0.95}
                    size_hint: 0.9, 0.05
                    TextInput:
                        text: ""
                        id: serveraddressinp
                        on_text_validate: root.load_servernames()
                        multiline: False
                    Label:
                        text: ""
                        id: nameofserver
                    Button:
                        text: "Register"
                        id: registerserverb
                        on_press: root.registerserver()
                ScrollView:
                    pos: 0, 0
                    pos_hint: {"x": 0, 'y': 0}
                    size_hint: 0.5, 0.95
                    ScrollGrid:
                        id: serverlist
                        #root_options: {"text": "Serverentries"}

                ScrollView:
                    pos: 0, 0
                    pos_hint: {"x": 0.51, 'y': 0}
                    size_hint: 0.49, 0.95
                    ScrollGrid:
                        id: friendlist
                        #root_options: {"text": "Friends"}
