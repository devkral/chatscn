<FriendTreeNode>:
    #rows: 1
    height: 30
    #border: (0, 0, 0, 0)

<ChatAvailTreeNode>
    rows: 1
    height: 30

<ServerTreeNode>
    height: 30

<ScrollGrid>
    size_hint: 1, None
    cols: 1
    row_default_height: 30

<ScrollTree>
    size_hint: 1, None
    hide_root: True

<DeleteDialog>
    Label:
        pos_hint: {"x": 0, 'y': 0.08}
        size_hint: 1, 0.91
        text: ""
        id: deletemsg

    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 1, 0.07
        id: buttonlist


<HashDialog>
    TreeListView:
        pos_hint: {"x": 0, 'y': 0.1}
        size_hint: 1, 0.9
        id: viewhashes
    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 1, 0.07
        id: buttonlist

<ImageDialog>
    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        pos_hint: {"x": 0, 'y': 0.95}
        size_hint: 1, 0.05
        Label:
            text: "Caption"
        TextInput:
            id: caption
            multiline: False
    FileDialog:
        buttons: [("Send",  lambda selection: app.root._send_image(selection, caption)), ("Cancel", lambda selection: app.root.dismiss_popup())]
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 1, 0.95

<FileDialog>
    FileChooserListView:
        pos_hint: {"x": 0, 'y': 0.1}
        size_hint: 1, 0.9
        id: selectedfile
    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        pos_hint: {"x": 0, 'y': 0}
        size_hint: 1, 0.07
        id: buttonlist

<PwDialog>:
    msg: msglabel.text
    Label:
        id: msglabel
    TextInput:
        id: pwfield
        password: True
        multiline: False

MainWidget:
    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {"x": 0.01, 'y': 0.92}
        size_hint: 0.98, 0.06
        ToggleButton:
            text: 'Chats'
            on_press: screenman.current="chats";
            group: "chatsv"
            state: "down"
            allow_no_selection: False
            id: chatbutton

        ToggleButton:
            text: 'Server & Friends'
            on_press: screenman.current="server"
            group: "chatsv"
            allow_no_selection: False
            id: serverbutton

        FloatLayout:
            Label:
                pos_hint: {"x": 0, 'y': 0}
                size_hint: 1, 1
                font_size: 20
                #valign: "end"
                #bold: True
                text: "normal"
                disabled: True
                disabled_color: 0,1,0,1
                id: senslabel
            Slider:
                pos_hint: {"x": 0, 'y': 0}
                size_hint: 1, 1
                min: 0
                max: 2
                step: 1
                #value: 0
                on_value: root.set_sensitivelabel(self)
                #id: sensslider
                opacity: 0.4
        Button:
            text: 'Settings'
            #on_press

    ScreenManager:
        pos_hint: {"x": 0.01, 'y': 0.01}
        size_hint: 0.98, 0.91
        id: screenman
        Screen:
            name: 'chats'
            on_enter: app.async_load(root.load_avail_chats)
            FloatLayout:
                #Splitter:
                #
                #    horizontal: True
                #    sizable_from: "right"
                #    on_release: chatview.x = self.x+self.width
                ScrollView:
                    pos_hint: {"x": 0, 'y': 0}
                    size_hint: 0.3, 1
                    ScrollGrid:
                        id: chatfriends
                        size_hint: 1, None
                        #root_options: {"text": "Chats"}
                TextInput:
                    hint_text: "Conversation Hash"
                    pos_hint: {"x": 0.305, 'y': 0.01}
                    size_hint: 0.695, 0.075
                    #on_double_tap: pass
                    text: ""
                    #padding: self.width/3, self.height/3, 5, 5
                    on_text: root.set_namehash(self.text)
                    id: convershash
                    multiline: False
                FloatLayout:
                    pos_hint: {"x": 0.305, 'y': 0.1}
                    size_hint: 0.695, 0.9
                    id: chatview
                    ScrollView:
                        pos_hint: {"x": 0, 'y': 0.3}
                        size_hint: 1, 0.7
                        bar_pos_y: "right"
                        bar_width: 10
                        ScrollGrid:
                            id: chathist
                            spacing: 5
                            row_default_height: 30
                            #root_options: {"text": "Chat history"}
                    TextInput:
                        pos: 0, 0
                        id: chattext
                        pos_hint: {"x": 0, 'y': 0.07}
                        size_hint: 1, 0.2
                    BoxLayout:
                        orientation: 'horizontal'
                        pos: 0, 0
                        pos_hint: {"x": 0, 'y': 0}
                        size_hint: 1, 0.06
                        Button:
                            text: 'Send'
                            on_press: root.send_text()
                        Button:
                            text: 'Image'
                            on_press: root.send_image()
                        Button:
                            text: 'Files'
                            on_press: root.send_file()

        Screen:
            name: 'server'
            on_enter: app.async_load(root.load_friends)
            FloatLayout:
                Label:
                    text: "Server:"
                    pos: 0, 0
                    pos_hint: {"x": 0, 'y': 0.95}
                    size_hint: 0.1, 0.05
                BoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {"x": 0.1, 'y': 0.95}
                    size_hint: 0.9, 0.05
                    TextInput:
                        text: ""
                        id: serveraddressinp
                        on_text_validate: root.load_servernames()
                        multiline: False
                    Label:
                        text: ""
                        id: nameofserver
                    Button:
                        text: "Register"
                        id: registerserverb
                        on_press: root.registerserver()
                ScrollView:
                    pos: 0, 0
                    pos_hint: {"x": 0, 'y': 0}
                    size_hint: 0.5, 0.95
                    ScrollGrid:
                        id: serverlist
                        #root_options: {"text": "Serverentries"}

                ScrollView:
                    pos: 0, 0
                    pos_hint: {"x": 0.51, 'y': 0}
                    size_hint: 0.49, 0.95
                    ScrollGrid:
                        id: friendlist
                        #root_options: {"text": "Friends"}
