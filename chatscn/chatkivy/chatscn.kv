<FriendTreeNode>:
    rows: 1
    height: 30

<ChatAvailTreeNode>:
    rows: 1
    height: 30

<ServerTreeNode>
    height: 30
    

MainWidget:
    TabbedPanel:
        pos: 0, 0
        size: root.width, root.height
        tab_width: root.width/3
        tab_pos: "top_left"
        do_default_tab: False
        TabbedPanelItem:
            text: 'Chats'
            FloatLayout:
                Slider:
                    pos_hint: {"x": 0, 'y': 0}
                    size_hint: 0.3, 0.05
                    min: 0
                    max: 2
                    step: 1
                    #value: 0
                    on_value: root.set_sensitivelabel(self)
                    #id: sensslider
                    opacity: 0.4
                Label:
                    pos_hint: {"x": 0, 'y': 0}
                    size_hint: 0.3, 0.1
                    font_size: 20
                    #valign: "end"
                    #bold: True
                    text: "normal"
                    color: 0,1,0,1
                    id: senslabel
                ScrollView:
                    pos_hint: {"x": 0, 'y': 0.1}
                    size_hint: 0.3, 0.9
                    TreeView:
                        id: chatfriends
                        root_options: {"text": "Chats"}

                ScrollView:
                    pos_hint: {"x": 0.305, 'y': 0.3}
                    size_hint: 0.695, 0.7
                    TreeView:
                        id: chatwinhist
                        root_options: {"text": "Chat history"}
                TextInput:
                    pos: 0, 0
                    pos_hint: {"x": 0.3, 'y': 0.07}
                    size_hint: 0.7, 0.2
                BoxLayout:
                    orientation: 'horizontal'
                    pos: 0, 0
                    pos_hint: {"x": 0.3, 'y': 0}
                    size_hint: 0.7, 0.06
                    Button:
                        text: 'Send'
                        #on_press: root.requester.send_text()
                    Button:
                        text: 'Image'
                    Button:
                        text: 'Files'

        TabbedPanelItem:
            text: 'Server & Friends'
            on_state: if self.state == 'down': root.async_load(root.load_friends)
            FloatLayout:
                Label:
                    text: "Server:"
                    pos: 0, 0
                    pos_hint: {"x": 0, 'y': 0.95}
                    size_hint: 0.1, 0.05
                BoxLayout:
                    orientation: 'horizontal'
                    pos: 0, 0
                    pos_hint: {"x": 0.1, 'y': 0.95}
                    size_hint: 0.9, 0.05
                    TextInput:
                        text: 
                        id: serveraddressinp
                        on_text_validate: root.load_servernames()
                        multiline: False
                    Label:
                        text: ""
                        id: nameofserver
                    Button:
                        text: "Register"
                        id: registerserverb
                        on_press: root.registerserver()
                ScrollView:
                    pos: 0, 0
                    pos_hint: {"x": 0, 'y': 0}
                    size_hint: 0.5, 0.95
                    TreeView:
                        id: serverlist
                        root_options: {"text": "Serverentries"}

                ScrollView:
                    pos: 0, 0
                    pos_hint: {"x": 0.51, 'y': 0}
                    size_hint: 0.49, 0.95
                    TreeView:
                        id: friendlist
                        root_options: {"text": "Friends"}
        
        TabbedPanelItem:
            text: 'Settings'
            #on_state: if self.state == True: root.async_load(root.load_friends)
            GridLayout:
                row_default_height: 30
                row_force_default: True
                cols: 2
                Label:
                    text: "Client:"
                GridLayout:
                    cols: 2
                    TextInput:
                        multiline: False
                    ToggleButton:
                        text: "Use unix"
                        id: use_unix
